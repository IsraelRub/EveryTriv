{
	"name": "everytriv-shared",
	"version": "1.0.0",
	"description": "Shared utilities and types for EveryTriv project",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"packageManager": "pnpm@8.15.0",
	"scripts": {
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist",
		"prebuild": "pnpm run clean",
		"watch": "tsc --watch",
		"dev": "pnpm run typecheck && pnpm run build",
		"lint": "eslint \"**/*.{ts,tsx}\"",
		"lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"test": "echo \"No tests specified\" && exit 0"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/react": "^18.3.23",
		"eslint": "^8.57.1",
		"prettier": "^3.6.2",
		"rimraf": "^5.0.5",
		"typescript": "^5.4.2"
	},
	"files": [
		"dist"
	]
}
