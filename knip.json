{
  "$schema": "https://knip.dev/schema.json",
  "aliases": {
    "@shared": "./shared",
    "@shared/*": "./shared/*",
    "@services/*": "./client/src/services/*",
    "@types/*": "./client/src/types/*",
    "@utils/*": "./client/src/utils/*",
    "@constants/*": "./client/src/constants/*"
  },
  "workspaces": {
    ".": {
      "entry": [
        "client/src/**/*.{ts,tsx}",
        "server/src/**/*.ts",
        "shared/**/*.ts"
      ],
      "project": [
        "client/src/**/*.{ts,tsx}",
        "server/src/**/*.ts",
        "shared/**/*.ts"
      ]
    }
  }
}

